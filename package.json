{
  "private": true,
  "name": "tsexams.org",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && preact build --no-sw --no-esm ",
    "serve": "rm -rf build && preact build --no-sw --no-esm && sirv build --host 127.0.0.1 --port 3030 --cors --single",
    "dev": "preact watch --host 127.0.0.1 --port 3030",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.tsx' --write"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@preact-hooks/unistore": "^1.1.2",
    "@types/autosize": "^4.0.1",
    "autosize": "^5.0.1",
    "axios": "^0.27.2",
    "idb": "^7.0.2",
    "jwt-decode": "^3.1.2",
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "unistore": "^3.5.2",
    "window-or-global": "^1.0.1",
    "workbox-window": "^6.5.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "jest": "^27.2.5",
    "jest-preset-preact": "^4.0.2",
    "node-sass": "^6.0.1",
    "preact-cli": "^3.0.0",
    "prettier": "^2.7.1",
    "sass-loader": "^10.2.1",
    "sirv-cli": "^1.0.0-next.3",
    "typescript": "^4.5.2",
    "workbox-webpack-plugin": "^6.5.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}